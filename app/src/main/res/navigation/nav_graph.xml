<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeScreen">
        <action
            android:id="@+id/action_global_homeScreen"
            app:destination="@id/homeScreen"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"/>
    <action
        android:id="@+id/action_global_welcomeScreen"
        app:destination="@id/welcomeScreen"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/welcomeScreen"
        android:name="com.example.yum_yum.presentation.welcome.WelcomeScreen"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeScreen_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_welcomeScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
        <action
            android:id="@+id/action_welcomeScreen_to_homeScreen"
            app:destination="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/weaklyMealsScreen"
        android:name="com.example.yum_yum.presentation.weaklyMeals.WeaklyMealsScreen"
        android:label="fragment_weakly_meals"
        tools:layout="@layout/fragment_weakly_meals" />
    <fragment
        android:id="@+id/favoriteScreen"
        android:name="com.example.yum_yum.presentation.Favorite.FavoriteScreen"
        android:label="fragment_favorite_screen"
        tools:layout="@layout/fragment_favorite_screen" />
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.yum_yum.presentation.login.LoginScreen"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginScreen_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginScreen_to_homeScreen"
            app:destination="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.yum_yum.presentation.home.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreen_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen" />
        <action
            android:id="@+id/action_homeScreen_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchScreen"
        android:name="com.example.yum_yum.presentation.search.SearchScreen"
        android:label="fragment_search_screen"
        tools:layout="@layout/fragment_search_screen" >
        <action
            android:id="@+id/action_searchScreen_to_mealDetailsScreen"
            app:destination="@id/mealDetailsScreen" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.yum_yum.presentation.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginScreen"
            app:destination="@id/loginScreen" />
        <action
            android:id="@+id/action_registerFragment_to_homeScreen"
            app:destination="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsScreen"
        android:name="com.example.yum_yum.presentation.mealDetails.MealDetailsScreen"
        android:label="fragment_meal_details_screen"
        tools:layout="@layout/fragment_meal_details_screen" >
        <argument
            android:name="meal_data"
            app:argType="com.example.yum_yum.presentation.model.Meal" />
        <action
            android:id="@+id/action_mealDetailsScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.yum_yum.presentation.profile.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>