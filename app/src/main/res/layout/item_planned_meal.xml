<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_color"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_meal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quick_recipes_image"
            android:contentDescription="@string/dish_name"
            app:shapeAppearance="@style/rounded_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/text_meal_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            style="@style/Yum.Text.LabelLarge"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/image_meal"
            app:layout_constraintStart_toEndOf="@id/image_meal"
            app:layout_constraintEnd_toStartOf="@id/button_remove"
            tools:text="Spaghetti Carbonara" />

        <TextView
            android:id="@+id/text_meal_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            style="@style/Yum.Text.LabelNormal"
            app:layout_constraintTop_toBottomOf="@id/text_meal_name"
            app:layout_constraintStart_toEndOf="@id/image_meal"
            app:layout_constraintEnd_toStartOf="@id/button_remove"
            tools:text="Pasta â€¢ Italian" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_remove"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Remove meal"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@color/error_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>