<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_day"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_marginVertical="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface_color"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/background_color"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Yum.Text.LabelNormal"
            tools:text="Mon" />

        <TextView
            android:id="@+id/text_day_number"
            style="@style/Yum.Text.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="15" />

        <View
            android:id="@+id/indicator_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/primary"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>