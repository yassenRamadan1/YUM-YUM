<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Yum.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Yum.Text.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item> <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Yum.Text.LabelXLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Yum.Text.LabelLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item> </style>

    <style name="Yum.Text.LabelNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item> <item name="android:textStyle">normal</item> </style>

    <style name="Yum.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item> <item name="android:textColor">#666666</item>
    </style>

    <style name="Yum.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item> <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item> <item name="android:minHeight">56dp</item> </style>

    <style name="Yum.Input.Box" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_textfield_default</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:hint">@null</item> <item name="android:minHeight">56dp</item>
    </style>

</resources>