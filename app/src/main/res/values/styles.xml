<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Yum.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Yum.Text.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">600</item>
        <item name="maxLines">2</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Yum.Text.LabelXLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Yum.Text.LabelLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Yum.Text.LabelNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_normal_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Yum.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Yum.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/surface_color</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Yum.Button.Secondary" parent="">
        <item name="backgroundTint">@null</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Yum.Input.Box" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_textfield_default</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:hint">@null</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.Yum.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface_color</item>
        <item name="itemShapeAppearanceOverlay">@style/ThemeOverlay.Yum.BottomNav</item>
        <item name="android:minHeight">80dp</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextAppearanceActive">@style/Yum.Text.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/Yum.Text.LabelSmall</item>
    </style>

    <style name="ThemeOverlay.Yum.BottomNav" parent="">
        <item name="colorSecondaryContainer">@color/chip_background_light</item>
        <item name="colorOnSecondaryContainer">@color/yum_pink</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Yum.Text.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:backgroundTint">@color/background_color</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="navigationIcon">@drawable/ic_back_black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ItemText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemText.Name">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>
    <style name="ItemText.Name.Food">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="ItemText.Name.Food.small">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="ItemText.Subtitle">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <style name="ItemIcon">
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">@dimen/small_icon_size</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>
    <!-- chips style-->
    <style name="Chips_choice" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
        <item name="chipEndPadding">@dimen/margin_large</item>
        <item name="chipStartPadding">@dimen/margin_large</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
    </style>
    <!-- chips style-->
    <style name="Chips" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
    </style>

    <!-- selected chips style-->
    <style name="Chips.SelectedChips">
        <item name="android:backgroundTint">@color/selected_chip_color</item>
    </style>
    <!-- chip color selected choice case -->
    <style name="Chips.toggle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>
    <style name="Chips_filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">16dp</item>
    </style>
</resources>